{
  "compilerOptions": {
    "noEmit": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "ignoreDeprecations": "5.0",
    "importsNotUsedAsValues": "error",
    "isolatedModules": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "types": ["svelte", "vitest/globals"],
    "paths": {
      "svelte-time": ["./src"],
      "svelte-time/*": ["./src/*"]
    }
  },
  "include": ["src", "tests"]
}
