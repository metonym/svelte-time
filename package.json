{
  "name": "svelte-time",
  "version": "0.4.0",
  "license": "MIT",
  "description": "Svelte component and action to format a timestamp using day.js",
  "author": "Eric Liu (https://github.com/metonym)",
  "svelte": "./src/index.js",
  "main": "./src/index.js",
  "types": "./types/index.d.ts",
  "scripts": {
    "dev": "rollup -cw",
    "predeploy": "rollup -c",
    "deploy": "npx gh-pages -d dist",
    "format": "prettier --write '{src,types}/**.{js,ts,svelte}'",
    "test": "svelte-check"
  },
  "dependencies": {
    "dayjs": "^1.10.6"
  },
  "devDependencies": {
    "prettier": "^2.3.2",
    "prettier-plugin-svelte": "^2.3.1",
    "svelte": "^3.40.3",
    "svelte-check": "^2.2.3",
    "svelte-readme": "^3.2.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/metonym/svelte-time"
  },
  "homepage": "https://github.com/metonym/svelte-time",
  "bugs": "https://github.com/metonym/svelte-time/issues",
  "keywords": [
    "svelte",
    "svelte component",
    "svelte action",
    "dayjs",
    "time formatter",
    "timestamp",
    "relative",
    "ago"
  ],
  "files": [
    "src",
    "types"
  ],
  "prettier": {
    "svelteStrictMode": true,
    "svelteBracketNewLine": true
  }
}
