{
  "name": "svelte-time",
  "version": "0.8.1",
  "license": "MIT",
  "description": "Svelte component and action to format a timestamp using day.js",
  "author": "Eric Liu (https://github.com/metonym)",
  "svelte": "./src/index.js",
  "main": "./src/index.js",
  "types": "./src/index.d.ts",
  "exports": {
    ".": {
      "types": "./src/index.d.ts",
      "svelte": "./src/index.js",
      "default": "./src/index.js"
    },
    "./src/*.svelte": {
      "types": "./src/*.svelte.d.ts",
      "import": "./src/*.svelte"
    },
    "./src/*": {
      "types": "./src/*.d.ts",
      "import": "./src/*.js"
    }
  },
  "scripts": {
    "dev": "rollup -cw",
    "format": "prettier --ignore-path .gitignore --write .",
    "test": "vitest"
  },
  "dependencies": {
    "dayjs": "^1.11.10"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^21.1.0",
    "@sveltejs/vite-plugin-svelte": "^2.4.6",
    "@testing-library/svelte": "^4.0.3",
    "jsdom": "^22.1.0",
    "prettier": "^3.0.3",
    "prettier-plugin-svelte": "^3.0.3",
    "svelte": "^4.2.0",
    "svelte-readme": "^3.6.3",
    "typescript": "^5.2.2",
    "vitest": "^0.34.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/metonym/svelte-time"
  },
  "homepage": "https://github.com/metonym/svelte-time",
  "bugs": "https://github.com/metonym/svelte-time/issues",
  "keywords": [
    "svelte",
    "svelte component",
    "svelte action",
    "dayjs",
    "time formatter",
    "timestamp",
    "relative",
    "ago"
  ],
  "files": [
    "src"
  ],
  "type": "module"
}
